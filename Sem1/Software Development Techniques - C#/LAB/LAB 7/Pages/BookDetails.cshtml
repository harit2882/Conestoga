@page
@model BookDetails
@{
    ViewData["Title"] = "Book Details";
}

<div class="container">
    <h1>Book Details</h1>

    @if (Model.book != null)
    {
        <div class="card">
            <img width ="300" height="300" src="@Model.book.imageLink" alt="Book Cover">
            <div class="card-body">
                <h4 class="card-title">Book Title: @Model.book.title</h4>
                <p class="card-text">Author: @Model.book.author</p>
                <p class="card-text">Country: @Model.book.country</p>
                <p class="card-text">Language: @Model.book.language</p>
                <p class="card-text">Pages: @Model.book.pages</p>
                <p class="card-text">Year: @Model.book.year</p>
                <p class="card-text">
                    <a href="@Model.book.link">More Info</a>
                </p>
            </div>
        </div>

        <a asp-page="/BookList" >Back to Books</a>
    }
    else
    {
        <p>Book not found.</p>
        <a asp-page="/BookList" >Back to Books</a>
    }
</div>


